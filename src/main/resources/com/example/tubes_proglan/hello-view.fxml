<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tubes_proglan.MovieSearchController">
    <center>
        <VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" >
            <TextField fx:id="searchField" promptText="Masukkan judul film" styleClass="search-field" />
            <Button text="Cari" onAction="#searchButtonClicked" styleClass="search-button" />
            <ListView fx:id="resultListView" prefHeight="200" styleClass="result-list" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" >
            <Button text="Bersihkan Hasil" onAction="#clearResults" styleClass="clear-button" />
        </HBox>
    </bottom>
</BorderPane>

